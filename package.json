{
    "name": "minecraft-scripting-libraries",
    "version": "1.0.0",
    "author": "Raphael Landaverde (rlanda@microsoft.com)",
    "description": "Collection of libraries and tooling for minecraft scripting.",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Mojang/minecraft-scripting-libraries.git"
    },
    "engines": {
        "node": ">=22.0.0",
        "npm": ">=10.0.0"
    },
    "scripts": {
        "build": "turbo run build",
        "test": "turbo run test",
        "test:ci": "turbo run test --concurrency=50%",
        "test:update": "turbo run test -- --update",
        "lint": "turbo run lint",
        "lint:fix": "turbo run lint -- --fix",
        "clean": "turbo run clean",
        "change": "beachball change",
        "release": "beachball publish --access public"
    },
    "keywords": [
        "minecraft",
        "scripting",
        "api",
        "creator"
    ],
    "bugs": {
        "url": "https://github.com/Mojang/minecraft-scripting-libraries/issues"
    },
    "homepage": "https://github.com/Mojang/minecraft-scripting-libraries#readme",
    "workspaces": [
        "libraries/*",
        "tools/*"
    ],
    "devDependencies": {
        "@rushstack/node-core-library": "^5.13.0",
        "@types/glob": "^8.0.0",
        "@types/node": "^24.0.8",
        "beachball": "^2.39.0",
        "chalk": "^5.3.0",
        "eslint": "^9.17.0",
        "glob": "^8.0.3",
        "prettier": "^3.5.3",
        "turbo": "^2.5.3"
    },
    "packageManager": "npm@10.9.2"
}
