{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "allowJs": true,
        "noImplicitAny": true,
        "paths": {
            "rollup/parseAst": [
                "../../node_modules/rollup/dist/parseAst"
            ]
        }
    },
    "lib": [
        "esnext"
    ],
    "include": [
        "src/*.ts",
        "src/**/*.spec.ts"
    ],
    "exclude": [
        "build",
        "dist",
        "lib",
        "node_modules"
    ],
}
